{% extends 'layout.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <div id="Element">

                </div>
            </div>
            <div class="col-10">
                <table class="table table-striped table-bordered">
                    <tr>
                        {% for p in periods %}
                            <th>
                                {{ p }}
                            </th>
                        {% endfor %}
                    </tr>
                    {% for t in table %}
                        <tr>
                            {% for el in t %}
                                <td id="el{{ el.number }}">
                                    <h3><span>{{ el.number }}</span></h3>
                                    <h2>{{ el.name }}</h2>
                                    <h6>{{ el.name_long }}</h6>
                                    <span>{{ el.m }}</span>
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        const table = JSON.parse('{{ json }}');
        const gen = (s) => {
            return `<h3><span>${s.number}</span></h3>
            <h2>${s.name}</h2>
            <h6>${s.name_long}</h6>
            <span>${s.m}</span>
            <div style="font-size: 16px;">
                <div>Серии - ${s.type}</div>
                <div>Энергетические уровни - ${s.energy}</div>
                <div>Тема раздела - ${s.theme}</div>
                <div><a href="${s.link}">Ссылка на википедии</a></div>
                <div>Открыли - ${s.created}</div>
            </div>`;
        }
        for (let i = 1; i <= Object.keys(table).length; ++i) {
            let j = table[i];
            $(`#el${i}`).click(() => {
                $('#Element').html(gen(j));
            })
        }
        $('body').ready(() => {
            $('#Element').html(table[1]);
        });
    </script>
{% endblock %}
